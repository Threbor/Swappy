<%= current_user_group.group.name %>
<div class="card-product-infos-groups d-flex justify-content-center">
  <div class="groups-img"><%= cl_image_tag current_user_group.group.activity.photo.key %></div>

  <div class="card-text-infos-groups">
    <div class="right-element-groups">
      <div class="groups-name">
        <%= current_user_group.group.activity.title %>
          <div class= "icon-groups">
            <i class="fa-solid fa-user-group"><%= current_user_group.group.group_users.count %></i>
          </div>
      </div>
    </div>

    <div class="groups-price"><%= current_user_group.group.activity.price %></div>

    <div class="infos-groups d-flex">
      <div class="groups-duration"><i class="fa-solid fa-clock"></i><%= current_user_group.group.activity.duration %>min</div>
    </div>
    <div class="infos-groups-2 align-items-end d-flex">
      <div class="groups-address">
        <i class="fa-solid fa-location-dot"></i>
        <%= current_user_group.group.activity.address %>
      </div>

      <input type="checkbox" id="menu">
      <label for="menu" class="icon">
          <i class="icon-link fa-solid fa-ellipsis"></i>
      </label>

      <div class="menu-link">
          <i class="icon-link fa-solid fa-ellipsis"></i>
          <i class="icon-link fa-solid fa-users"></i>
          <i class="icon-link fa-regular fa-calendar-check"></i>
          <i class="icon-link fa-solid fa-heart"></i>
      </div>
    </div>
  </div>
</div>
