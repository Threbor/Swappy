    params[:city],
    class: "form-control",
    placeholder: "Enter your city"
  %>
  <%= text_field_tag :km,
    params[:km],
    class: "form-control",
    placeholder: "How far away?"
  %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Restaurants") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Sorties culturelles") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Sorties sportives") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Films & Séries") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "En soirée") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "En famille") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Activités culinaires") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Activités créatives") %>
  <%= check_box_tag(:category)%>
  <%= label_tag(:category, "Livres") %>
  <%= submit_tag "Confirm my selection", class: "btn btn-primary" %>
<% end %>
