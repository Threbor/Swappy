<div class="background-img-show d-flex align-items-end" style="background-image: linear-gradient(180.04deg, rgba(255, 255, 255, 0) 38.55%, rgba(0, 0, 0, 0.6) 66.66%, rgba(0, 0, 0, 0.75) 91.64%), url(<%= cl_image_path @activity.photo.key %>);">
  <div class="button-show d-flex justify-content-between" >
    <% if params[:activity] %>
      <%= link_to activities_path(activity: {city: params[:activity][:city], km: params[:activity][:km], category: params[:activity][:category]}) do %><i class="fa-solid fa-arrow-down"></i><% end %>
      <%= link_to reject_path( id: @activity.id, activity: {city: params[:activity][:city], km: params[:activity][:km], category: params[:activity][:category]}), data: { turbo_method: :post} do %><i class="fa-solid fa-xmark"></i><% end %>
      <%= link_to favorites_path( id: @activity.id, activity: {city: params[:activity][:city], km: params[:activity][:km], category: params[:activity][:category]}), data: { turbo_method: :post} do %><i class="heart-index fa-solid fa-heart"></i><% end %>
      <%= link_to new_group_path(activity_id: @activity.id, activity: {city: params[:activity][:city], km: params[:activity][:km], category: params[:activity][:category]}) do %><i class="fa-solid fa-users"></i><% end %>
    <% else %>
      <%= link_to favorites_path do %><i class="fa-solid fa-arrow-down"></i><% end %>
      <i class="fa-solid fa-xmark cross-index"></i>
      <i class="heart-index fa-solid fa-heart"></i>
      <i class="fa-solid fa-users"></i>
    <% end  %>
  </div>
</div>
<div class="card-activity">
  <div class="card-activity-info">
    <div class="card-activity-title">
      <div class="card-activity-title-category">
        <h1><strong><%= @activity.title %></strong></h1>
          <% if @activity.category == "Restaurant" %>
            <i class="fas fa-utensils"></i>
          <% elsif @activity.category == "Culture" %>
            <i class="fas fa-university"></i>
          <% elsif @activity.category == "Sport" %>
            <i class="fas fa-football-ball"></i>
          <% elsif @activity.category == "Cinema" %>
            <i class="fas fa-film"></i>
          <% elsif @activity.category == "Party" %>
            <i class="fas fa-glass-cheers"></i>
          <% elsif @activity.category == "Family" %>
            <i class="fas fa-user-friends"></i>
          <% elsif @activity.category == "Food" %>
            <i class="fas fa-cookie-bite"></i>
          <% elsif @activity.category == "Creativity" %>
            <i class="fas fa-palette"></i>
          <% elsif @activity.category == "Book" %>
            <i class="fas fa-book"></i>
          <% end %>
      </div>
    </div>
      <div class="card-activity-icon">
        <% if @activity.price <= 20 %>
          <i class="fas fa-euro-sign euro-index"></i>
        <% elsif  @activity.price.between?(20, 50) %>
          <i class="fas fa-euro-sign euro-index"></i><i class="fas fa-euro-sign euro-index"></i>
        <% elsif  @activity.price >= 50 %>
          <i class="fas fa-euro-sign euro-index"></i><i class="fas fa-euro-sign euro-index"></i><i class="fas fa-euro-sign euro-index"></i>
        <% end %>
        <br>
          <i class="far fa-clock"></i>&ensp;<%= (@activity.duration)/60 %> hours
        <br>
          <i class="fas fa-child"></i>&ensp;<%= @activity.ages%>
        <br>
        <i class="fa-solid fa-location-dot"></i>&ensp;<%= @activity.address%>
      </div>
    <div class="card-activity-description">
      <p><%= @activity.description %></p>
    </div>
</div>
